<body>
    <div class="container">
        <div class="sidebar sidebargo">
            
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/intro">My Intro</a></li>
                    <li><a href="/services">Services</a></li>
                    <li><a href="/contact">contact</a></li>
                    <li><a href="/contactme">Contact Me</a></li>
                </ul>
            </nav>
        </div>
        <div class="main">
            <div class="hamburger">
                <img class="ham12" src="static/ham1.png" alt="ham1" width="22">
                <img class="cross" src="static/cross.png" alt="ham2" width="22">
            </div>
            <div class="contactform" style="padding-left: 350px;">
                <h1><u>Contact me for work/general enquiries</u></h1>
                <form action="/contact" method="post">
                    <div class="mb-3">
                        <label for="clientname" class="form-label">Name</label>
                        <input type="name" class="form-control" name="name" id="clientname" aria-describedby="emailHelp">
                        
                      </div>
                    <div class="mb-3">
                      <label for="clientemail" class="form-label">Email address</label>
                      <input type="email" class="form-control"  name="email" id="clientemail" aria-describedby="emailHelp">
                      
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Phone</label>
                      <input type="phone"  name="phone" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 form-check">
                      <input type="checkbox"  name="check" class="form-check-input" id="isclient">
                      
                      <label class="form-check-label" for="isclient">I want you to work on a project with me.</label>
                      <div id="emailHelp" class="form-text" style="margin-left: 1px;">We'll never share your email & phone with anyone else.</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            </div>
        </div>
    </div>
